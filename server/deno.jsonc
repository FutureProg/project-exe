{
  // Permissions
  "permissions": {
    "default": {
      "net": [
        "0.0.0.0:8000",
        "api.anthropic.com"
      ],
      "read":{ 
        "allow": ["."],
        "deny": [".env"]
      },
      "env": true
    }    
  },
  "tasks": {
    "dev": "deno run --watch --allow-env --deny-read=.env --allow-read --allow-net=0.0.0.0:8000,api.anthropic.com main.ts"
  },
  "imports": {
    "@anthropic-ai/claude-agent-sdk": "npm:@anthropic-ai/claude-agent-sdk@^0.2.29",
    "@std/assert": "jsr:@std/assert@1"
  }
}
